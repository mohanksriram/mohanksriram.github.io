        title=&quot;&quot;
        src=&quot;/static/d39467bec93d9d78e8df4d66b4bb4c1f/6c717/hrithik_detector.jpg&quot;
        srcset=&quot;/static/d39467bec93d9d78e8df4d66b4bb4c1f/e33f8/hrithik_detector.jpg 293w,
